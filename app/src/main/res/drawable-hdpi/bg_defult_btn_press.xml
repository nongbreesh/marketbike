<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:dither="true">
            <solid android:color="#ff7a7a7a" />
            <corners android:radius="2dp"></corners>
        </shape>
    </item>


    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape
            android:shape="rectangle"
            android:dither="true">
            <gradient
                android:startColor="#ffe5e5e5"
                android:endColor="#ffe5e5e5"
                android:angle="180" />

            <padding
                android:left="20dp"
                android:right="20dp" />
        </shape>
    </item>


</layer-list>