<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selector style for listrow -->
    <item
            android:state_selected="false"
            android:state_pressed="false"
            android:state_focused="false"
            android:drawable="@drawable/bg_menu_selected"/>

    <item android:drawable="@drawable/bg_menu_selected" android:state_enabled="true"/>

    <item android:drawable="@drawable/bg_menu_selected" android:state_pressed="true"/>

    <item android:drawable="@drawable/bg_menu_selected" android:state_focused="true"/>

    <item android:drawable="@drawable/bg_menu_selected" android:state_active="true"/>
    <item android:drawable="@drawable/bg_menu_selected" android:state_selected="true"/>


</selector>