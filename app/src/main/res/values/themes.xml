<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/tabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/Divider</item>
        <item name="android:actionBarTabTextStyle">@style/tabtextcolor</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">@color/actionbar_bg</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyActionBarTabTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabtextcolor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/my_color_selector</item>
    </style>

    <style name="Divider" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:background">@drawable/tab_bg_selector</item>
    </style>

    <style name="tabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:background">@drawable/tab_bg_selector</item>
        <item name="android:gravity">center</item>
    </style>

</resources>